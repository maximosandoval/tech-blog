<div class="text-center" id="blog-by-id">
  <h2>{{title}}</h2>
    <hr>
      <p>Blog post by: {{user.userName}} on {{format_date createdAt}}</p>
      <p>{{content}}</p>
    <hr>

    <h5>Comments:</h5>  

  {{#each comments as |comment|}}
    <p>{{comment.comment}} - {{user.userName}} on {{format_date createdAt}}</p>
  
  {{#if logged_in}}
    <a href="./dashboard/editComment/{{comment.id}}" class="edit-link">Edit/Delete Comment</a>
  {{/if}}
  {{/each}}

 
  


 
<br>
<br>

{{#if logged_in}}
 <div class="row mt-4" >
    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-desc">Comment here:<span id="blog_id">{{id}}</span></label>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
  {{/if}}


  <script src="./js/comment.js"></script>

 